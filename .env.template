# Template for environment variables
# Copy this to .env.local for development

# =================================================================
# REQUIRED: Database Connection
# =================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/infinitymix"

# =================================================================
# REQUIRED: Authentication Secrets
# Generate secure secrets (32+ characters, random)
# Use: openssl rand -base64 32 or https://generate-secret.vercel.app/32
# =================================================================
NEXTAUTH_SECRET="your-very-secure-nextauth-secret-32-chars-minimum"
BETTER_AUTH_SECRET="your-very-secure-better-auth-secret-32-chars-minimum"

# =================================================================
# REQUIRED: Development URL
# =================================================================
NEXTAUTH_URL="http://localhost:3000"
BETTER_AUTH_URL="http://localhost:3000"

# =================================================================
# OPTIONAL: Cloud Storage (AWS S3)
# File storage for uploaded audio files
# =================================================================
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="infinitymix-dev"

# =================================================================
# OPTIONAL: Audio Processing Service
# When you replace the mock audio processing
# =================================================================
AUDIO_PROCESSING_SERVICE_URL="http://localhost:8000"

# =================================================================
# OPTIONAL: Error Monitoring
# For production error tracking (recommended)
# =================================================================
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# =================================================================
# NODE ENVIRONMENT
# =================================================================
NODE_ENV="development"
